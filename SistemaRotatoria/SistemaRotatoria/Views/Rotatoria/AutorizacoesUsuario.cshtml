
@{
    ViewBag.Title = "AutorizacoesUsuario";
}
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/AutorizacoesUsuario/SalvarAutorizacoesUsuario.js"></script>
<!--espaço entre o NAV e o PANEL-->
<br />

<!-- inicio do PANEL-->
<div class="panel panel-default">
    <div class="panel-body">
        <!--tituo do PANEL-->
    </div>
    <!--inicio do formulario-->
    <div class="panel-footer">
        <div class="container">
            <div class="form-group">
                <label>Data</label>
                <input type="date" id="txt-data" class="form-control" value="2017-12-03" />
            </div>
            <div class="form-group">
                <label>Placa</label>
                <input type="text" id="txt-placa" class="form-control" style="text-transform:uppercase" onkeyup="BuscaPlaca(event)" />
            </div>
            <div class="form-group">
                <label>Marca</label>
                <input type="text" id="txt-marca" class="form-control" />
            </div>
            <div class="form-group">
                <label>Modelo</label>
                <input type="text" id="txt-modelo" class="form-control" />
            </div>
            <div class="form-group">
                <label>Cor</label>
                <input type="text" id="txt-cor" class="form-control" />
            </div>
            <div class="form-group">
                <label>Eixo</label>
                <input type="text" id="txt-eixo" class="form-control" />
            </div>
            <div class="form-group">
                <button id="btn-salvar" class="btn btn-default">Salvar</button>
                <button class="btn btn-default">
                    @Html.ActionLink("Cancelar", "Index", "Autorizacaos")
                </button>
            </div>
        </div>
    </div>
</div>

<!--URL que indicam onde fica o METODO ACTION-->
<script>
    generalSettings = {
        verificarPlaca: '@Url.Action("VerificarPlaca", "Rotatoria")',
        salvarAutorizacao: '@Url.Action("SalvarAutorizacoesUsuario", "Rotatoria")'
    }
</script>

